<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="15dp"


    android:layout_height="match_parent"
    tools:context="com.example.quanganh.activity.LoginActivity">
    <ImageView
        android:layout_marginTop="100dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_poly"
        android:layout_gravity="center"
        />



    <EditText

        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="5dp"
        android:hint="Email"
        android:id="@+id/edtEmail"
        android:background="@drawable/edit_text_styles"

        />
    <EditText
        android:layout_marginTop="5dp"

        android:layout_width="match_parent"
        android:padding="5dp"
        android:layout_height="50dp"
        android:hint="Password"
        android:password="true"
        android:id="@+id/edtPassword"
        android:background="@drawable/edit_text_styles"
        />
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remember"
        android:id="@+id/ckRemeber"

        />
    <Button

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_styles"
        android:textColor="#ffff"
        android:text="Register"

        android:layout_gravity="center"
        android:id="@+id/btnRegister"
        />
    <TextView
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SignUp for free!"

        android:textAlignment="center"
        android:layout_gravity="bottom"
        android:id="@+id/tvSignup"
        />

</LinearLayout>